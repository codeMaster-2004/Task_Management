generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Todo {
  id              Int      @id @default(autoincrement())
  title           String
  dueDate         DateTime?
  imageUrl        String?
  duration        Int      @default(1) // Duration in days
  createdAt       DateTime @default(now())

  // Self-referential many-to-many for dependencies
  dependencies    Todo[]   @relation("TodoDependencies")
  dependentOn     Todo[]   @relation("TodoDependencies")
}